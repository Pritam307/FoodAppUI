<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/img_container"
    android:layout_height="match_parent"
    tools:context="com.example.pritampc.foodappui.MainActivity">

    <RelativeLayout
        android:id="@+id/design"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/background"
        android:fitsSystemWindows="true"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/plate1"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="70dp"
            android:src="@drawable/restaurant" />

        <ImageView
            android:id="@+id/plate3"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_alignBottom="@+id/plate2"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="182dp"
            android:src="@drawable/trending" />

        <ImageView
            android:id="@+id/plate2"
            android:layout_width="210dp"
            android:layout_height="210dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="31dp"
            android:src="@drawable/recipe" />

    </RelativeLayout>

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:minHeight="?attr/actionBarSize"
        android:layout_height="52dp"
        android:layout_width="match_parent"
        android:background="@color/colorPrimaryDark">

        <RelativeLayout
            android:id="@+id/tool_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/menu_bar"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:background="@drawable/ic_menu_black_24dp"
                android:layout_width="30dp"
                android:layout_height="30dp" />

            <ImageView
                android:id="@+id/search_bar"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="8dp"
                android:background="@drawable/ic_search_black_24dp"
                android:layout_width="30dp"
                android:layout_height="30dp" />

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/search_bar"
                android:layout_centerHorizontal="true"
                android:text="Food App"
                android:typeface="serif"
                android:textSize="27sp" />

        </RelativeLayout>

    </android.support.v7.widget.Toolbar>

    <RelativeLayout
        android:id="@+id/layhide"
        android:layout_width="400dp"
        android:visibility="invisible"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:background="@drawable/hide_layout_circular"
        android:layout_height="400dp">

        <TextView
                android:id="@+id/order_place"
                android:text="Place Oder"
                android:textSize="18sp"
                android:layout_centerVertical="true"
                android:textColor="@color/hide_child_color"
                android:layout_marginLeft="140dp"
                android:layout_marginTop="160dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/delivery"
            android:text="Delivery"
            android:textSize="18sp"
            android:layout_centerVertical="true"
            android:layout_below="@id/order_place"
            android:textColor="@color/hide_child_color"
            android:layout_marginLeft="140dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/Contact"
            android:text="Contact"
            android:textSize="18sp"
            android:layout_centerVertical="true"
            android:textColor="@color/hide_child_color"
            android:layout_marginLeft="140dp"
            android:layout_below="@id/delivery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    </RelativeLayout>

    <ImageView
        android:id="@+id/extra_but"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="17dp"
        android:background="@drawable/extra_butt_white" />

</RelativeLayout>
